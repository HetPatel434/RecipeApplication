<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="220dp"
                app:srcCompat="@drawable/cake2" />

            <TextView
                android:id="@+id/food_name"
                android:layout_below="@+id/imageView2"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/Brown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carrot Cake" />

            <TextView
                android:id="@+id/food_ingredients"
                android:layout_below="@+id/food_name"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/carrotIngredients" />

            <TextView
                android:id="@+id/food_steps"
                android:layout_below="@+id/food_ingredients"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ispum" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>